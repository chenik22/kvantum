<Page x:Class="Kvanto.Pages.Kurs.Kurs_Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Kvanto.Pages.Kurs"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Kurs_Main">

    <Grid Background="White">
        <ScrollViewer Margin="0,60,0,50" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden">
            <StackPanel x:Name="parrent" Orientation="Vertical"/>
        </ScrollViewer>
        <Button x:Name="Entrance" Width="160" Height="30" Margin="0,400,0,0" Content="Создать курс" Foreground="White" Click="Kurs_Click" Style="{StaticResource BlueButtonStyle}"/>
    </Grid>
</Page>
